@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Roles </h2>

@Html.ActionLink("Crear un nuevo rol", "Create") | @Html.ActionLink("Administrar Roles", "ManageUserRoles")
<hr/>
<div>
    @foreach (var role in Model)
{
    <p><strong>@role.Name | </strong> 
    <span onclick="return confirm('Are you sure to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Eliminar</a></span> | 
    @Html.ActionLink("Editar", "Edit", new { roleName = @role.Name })
    </p>
}
</div>